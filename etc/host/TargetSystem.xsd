<?xml version="1.0" encoding="UTF-8"?>
<schema xmlns="http://www.w3.org/2001/XMLSchema" targetNamespace="http://www.legend.com/TargetSystem.xsd"
	xmlns:p="http://www.legend.com/TargetSystem.xsd"
	elementFormDefault="qualified">

	<element name="TargetSystem">
		<complexType>
			<sequence>
				<!-- 目标系统IP地址 -->
				<element name="TargetIp">
					<simpleType>
						<restriction base="string">
							<pattern
								value="" />
						</restriction>
					</simpleType>
				</element>
				<!-- 目标系统端口号 -->
				<element name="TargetPort">
					<simpleType>
						<restriction base="integer">
							<minInclusive value="1024" />
							<maxInclusive value="65535" />
						</restriction>
					</simpleType>
				</element>
				<!-- 通讯超时时间 -->
				<element name="WaitTimeout">
					<simpleType>
						<restriction base="integer">
							<minInclusive value="0" />
							<maxInclusive value="120" />
						</restriction>
					</simpleType>
				</element>
				<!-- 日志开关 -->
				<element name="useLog" type="boolean" />

				<!-- 通讯格式 -->
				<element name="CodecFactory">
					<complexType mixed="true">
						<simpleContent>
							<extension base="p:CodecFactory_Restriction">
								<!-- 长度、值格式中的长度位数 -->
								<attribute name="len" type="integer" />
								<attribute name="charsetName" type="string" />
							</extension>
						</simpleContent>
					</complexType>
				</element>

			</sequence>
		</complexType>
	</element>
	<simpleType name="CodecFactory_Restriction">
		<restriction base="string">
			<enumeration value="LenValueCodecFactory" />		<!-- 长度、值格式   -->
		</restriction>
	</simpleType>
</schema>
